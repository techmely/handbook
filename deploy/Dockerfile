FROM oven/bun as base

ARG NEXT_PUBLIC_APP_VERSION
ARG NEXT_PUBLIC_NODE_ENV
ARG NODE_ENV
ARG PORT
ARG HOSTNAME
ARG NEXT_PUBLIC_ALGOLIA_APP_ID
ARG NEXT_PUBLIC_ALGOLIA_API_KEY
ARG NEXT_PUBLIC_ALGOLIA_INDEX

ENV NEXT_PUBLIC_ALGOLIA_APP_ID=${NEXT_PUBLIC_ALGOLIA_APP_ID}
ENV NEXT_PUBLIC_ALGOLIA_API_KEY=${NEXT_PUBLIC_ALGOLIA_API_KEY}
ENV NEXT_PUBLIC_ALGOLIA_INDEX=${NEXT_PUBLIC_ALGOLIA_INDEX}
ENV NEXT_PUBLIC_APP_VERSION=${NEXT_PUBLIC_APP_VERSION}
ENV NEXT_PUBLIC_NODE_ENV=${NEXT_PUBLIC_NODE_ENV}
ENV NODE_ENV=${NODE_ENV}
ENV PORT=${PORT}
ENV HOSTNAME=${HOSTNAME}

USER bun

WORKDIR /app/handbook

COPY --chown=bun . .

RUN bun install --frozen-lockfile
RUN bun run build

FROM oven/bun

ARG NEXT_PUBLIC_APP_VERSION
ARG NEXT_PUBLIC_NODE_ENV
ARG NODE_ENV
ARG PORT
ARG HOSTNAME
ARG NEXT_PUBLIC_ALGOLIA_APP_ID
ARG NEXT_PUBLIC_ALGOLIA_API_KEY
ARG NEXT_PUBLIC_ALGOLIA_INDEX

ENV NEXT_PUBLIC_ALGOLIA_APP_ID=${NEXT_PUBLIC_ALGOLIA_APP_ID}
ENV NEXT_PUBLIC_ALGOLIA_API_KEY=${NEXT_PUBLIC_ALGOLIA_API_KEY}
ENV NEXT_PUBLIC_ALGOLIA_INDEX=${NEXT_PUBLIC_ALGOLIA_INDEX}
ENV NEXT_PUBLIC_APP_VERSION=${NEXT_PUBLIC_APP_VERSION}
ENV NEXT_PUBLIC_NODE_ENV=${NEXT_PUBLIC_NODE_ENV}
ENV NODE_ENV=${NODE_ENV}
ENV PORT=${PORT}
ENV HOSTNAME=${HOSTNAME}

USER bun

WORKDIR /app/handbook

COPY --from=base --chown=bun /app/handbook/node_modules ./node_modules
COPY --from=base --chown=bun /app/handbook/.next ./.next
COPY --from=base --chown=bun /app/handbook/next.config.mjs ./next.config.mjs
COPY --from=base --chown=bun /app/handbook/next-sitemap.config.js ./next-sitemap.config.js
COPY --from=base --chown=bun /app/handbook/public ./public
COPY --from=base --chown=bun /app/handbook/package.json ./package.json

EXPOSE ${PORT}

CMD bun next start --port ${PORT}